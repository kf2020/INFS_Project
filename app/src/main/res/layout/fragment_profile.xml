<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/header_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/food"
        android:scaleType="fitXY"/>


    <TextView
        android:id="@+id/total_points_label"
        app:layout_constraintTop_toBottomOf="@+id/header_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="Overall Total Points: " />

    <TextView
        android:id="@+id/total_points"
        app:layout_constraintTop_toBottomOf="@+id/total_points_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="0"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <View
        android:id="@+id/separator"
        app:layout_constraintTop_toBottomOf="@id/total_points"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/calorie_points_label"
        app:layout_constraintTop_toBottomOf="@+id/separator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="Overall Calorie Quiz Points: " />

    <TextView
        android:id="@+id/calorie_points"
        app:layout_constraintTop_toBottomOf="@+id/calorie_points_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="0"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <View
        android:id="@+id/separator2"
        app:layout_constraintTop_toBottomOf="@id/calorie_points"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/trivia_points_label"
        app:layout_constraintTop_toBottomOf="@+id/separator2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="Overall Calorie Quiz Points: " />

    <TextView
        android:id="@+id/trivia_points"
        app:layout_constraintTop_toBottomOf="@+id/trivia_points_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="0"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>


    <View
        android:id="@+id/separator3"
        app:layout_constraintTop_toBottomOf="@id/trivia_points"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/encouragement"
        app:layout_constraintTop_toBottomOf="@+id/separator3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingRight="10dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="75dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="These games are designed to help you learn about food in fun, different ways. Play more to earn points!" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>